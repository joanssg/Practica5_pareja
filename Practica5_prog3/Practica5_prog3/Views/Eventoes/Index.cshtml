@model IEnumerable<Practica5_prog3.Models.Evento>

@{
    ViewBag.Title = "Index";
}

<h2>Agenda de Eventos</h2>
<form method="post">
    <input type="text" name="busqueda" class="form-control"/>
    <input type="submit" name="Buscar" class="btn btn-primary" />
</form>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Hora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Evento1)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Hora)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Fecha)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Evento1)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Hora }) |
        @Html.ActionLink("Details", "Details", new { id = item.Hora }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Hora })
    </td>
</tr>
}

</table>
