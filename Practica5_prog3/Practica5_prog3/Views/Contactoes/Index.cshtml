@model IEnumerable<Practica5_prog3.Models.Contacto>

@{
    ViewBag.Title = "Index";
}
    <style type="text/css">
    .box {
        background-color:#efe8d4;
        border: 1px solid #edeeee;
        border-radius: 3px;
        text-align: center;
        max-width: 80%;
        box-shadow: 0 0 20px 1px rgba(0, 0, 0, 0.3);
        margin-left: 100px;
        margin-top: 20px;
        margin-right: 200px;
        font-family: Montserrat;
    }</style>

    <div class="box">
        <h2>Agenda de Contactos</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <form method="post">
            <input type="text" name="busqueda" class="form-control" style="margin-left:35%;" /> <br />
            <input type="submit" name="Buscar" class="btn btn-primary" />
        </form>
       
        <br />
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Celular)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Celular)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Nombre }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Nombre }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Nombre })
                    </td>
                </tr>
            }

        </table>
        <br />
        <form action="/Eventoes/Index" method="post">
            <button class="btn btn-primary">Agendar Evento</button>
        </form>
        <br />
    </div>