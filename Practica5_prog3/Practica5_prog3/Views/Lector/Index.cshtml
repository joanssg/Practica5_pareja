@using Practica5_prog3.Models
@model IEnumerable<Customer_Lector>
@{
    ViewBag.Title = "Index";
}
    <style type="text/css">
        .box {
            background-color: cornsilk;
            border: 1px solid #edeeee;
            border-radius: 3px;
            text-align: center;
            max-width: 80%;
            box-shadow: 0 0 20px 1px rgba(0, 0, 0, 0.3);
            margin-left: 100px;
            margin-top: 20px;
            margin-right: 200px;
            font-family: Montserrat;
        }
    </style>

    <div class="box">
        <h2>Cargar Archivo</h2>

        @using (Html.BeginForm("Index", "Lector", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <input type="file" accept=".csv" name="postedFile" class="btn btn-primary" style="margin-left:40%;" />
            <br />
            <input type="submit" name="Import" class="btn btn-primary" />

        }
        @if (Model.Count() > 0)
        {

            <hr />
            <table class="table">
                @*<tr>
                    <th>Customer Id</th>
                    <th>Name</th>
                    <th>Country</th>
                </tr>*@

                @foreach (Customer_Lector customer in Model)
                {
                    <td>@customer.Id</td>
                    <td>@customer.Nombre</td>
                    <td>@customer.Pais</td>
                    <td>@customer.Id2</td>
                    <td>@customer.Nombre2</td>
                    <td>@customer.Pais2</td>

                    <tr>
                    </tr>
                }
            </table>
        }
    </div>